<%- include("templates/head") %>
<!-- CSS -->

<title> <% pageTitle %> </title>
</head>

<%- include("templates/navBar") %>

<div class="container">
  <div class="text-center">
    <h1 class="font-weight-bolder">BIBLIOTECA <i class="fas fa-book-open"></i> </h1>
    <h2 class="font-weight-bolder">Municipal</h2>
  </div>

  <br>
  <h2 class="text-center font-italic font-weight-bold">Eliminar Usuario</h2>
  <br>

  <% if (resultDeleteUser === "successful") { %>
  <div class="alert alert-success" role="alert">
    Usuario eliminado con Ã©xito!.
  </div>
  <% } %>

  <% if (resultDeleteUser === "incorrect") { %>
  <div class="alert alert-danger" role="alert">
    No se pudo eliminar al Usuario, verifique que no tenga libros prestados.
  </div>
  <% } %>

  <button class="btn btn-info btn-lg btn-block" type="button" data-toggle="collapse" data-target="#deleteUser"
    aria-expanded="false" aria-controls="collapseExample">
    Eliminar Usuario
    <i class="fas fa-user-times"></i>
  </button>
  <div class="collapse" id="deleteUser">
    <div class="card card-body">

      <form class="" action="/delete-user" method="POST">
        <div class="form-row">
          <select class="custom-select" name="userList" id="userList" required>
            <option value="" selected disabled>Seleccione el usuario a ELIMINAR</option>
            <% for( let user of users ) { %>
            <option value="<%= user.IdNumber %>"> <%= user.name %> - <%= user.IdNumber %> </option>
            <% } %>
          </select>
        </div>
        <br>

        <div class="text-center">
          <button type="submit" class="btn btn-success">
            Eliminar Usuario
            <i class="fas fa-trash-alt"></i>
          </button>
        </div>
      </form>

    </div>
  </div>

  <br><br><br>
</div>

<%- include("templates/scripsJS") %>
<!-- JS -->
</body>

</html>